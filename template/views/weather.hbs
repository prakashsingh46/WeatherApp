<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    
    {{!-- navbar --}}
    {{>navbar}}

    <!-- main header -->
    <div class="container-fluid" >
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                    
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">8th Aug</p>

                    </div>
                    <div class="main_layer">
                        <p id="output_city">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C </p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{{>footer}}
<script src="JS/main.js"></script>
</html>